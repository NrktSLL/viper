[server]
enableCORS = false
enableXsrfProtection = false

[browser]
serverAddress = "0.0.0.0"
serverPort = 8501
gatherUsageStats = false

[theme]
# Hacker theme with red accents
primaryColor="#FF0033"        # Alert red for highlights
backgroundColor="#0A0A0A"     # Almost black background
secondaryBackgroundColor="#1A1A1A"  # Dark gray for cards/containers
textColor="#33FF00"           # Bright green text
font="monospace"              # Classic terminal monospace font
